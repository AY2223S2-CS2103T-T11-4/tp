<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" minHeight="175.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane minHeight="170.0" prefHeight="115.0" prefWidth="346.0" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="160.0" prefHeight="106.0" prefWidth="243.0" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="nric" styleClass="cell_big_label" text="\$nric" />
                <Label fx:id="name" styleClass="cell_big_label" text="\$first" />
            </HBox>
            <FlowPane fx:id="tags" prefHeight="20.0" prefWidth="326.0">
                <padding>
                    <Insets bottom="2.0" top="5.0" />
                </padding>
            </FlowPane>
            <Label fx:id="phone" prefHeight="17.0" prefWidth="329.0" styleClass="cell_small_label" text="\$phone">
                <padding>
                    <Insets top="3.0" />
                </padding>
            </Label>
            <Label fx:id="email" prefHeight="17.0" prefWidth="332.0" styleClass="cell_small_label" text="\$email">
                <padding>
                    <Insets top="3.0" />
                </padding>
            </Label>
            <Label fx:id="address" prefHeight="17.0" prefWidth="333.0" styleClass="cell_small_label" text="\$address">
                <padding>
                    <Insets top="3.0" />
                </padding>
            </Label>
            <Label fx:id="drugAllergy" prefHeight="13.0" prefWidth="211.0" styleClass="cell_small_label" text="\$drugAllergy" />
            <FlowPane fx:id="medicines" prefHeight="22.0" prefWidth="326.0">
                <padding>
                    <Insets bottom="2.0" top="5.0" />
                </padding>
            </FlowPane>
        </VBox>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
      <HBox.margin>
         <Insets top="8.0" />
      </HBox.margin>
      <padding>
         <Insets top="5.0" />
      </padding>
    </GridPane>
</HBox>
