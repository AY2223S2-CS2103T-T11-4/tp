<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="600" minWidth="450" onCloseRequest="#handleExit" title="HospiSearch" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/hospisearch_32.png" />
  </icons>
  <scene>
    <Scene fill="#8fd6e8">
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox prefHeight="400.0" prefWidth="470.0">
        <MenuBar fx:id="menuBar" prefHeight="31.0" prefWidth="340.0" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
          <Menu mnemonicParsing="false" text="Theme">
            <MenuItem mnemonicParsing="false" onAction="#applyLightTheme" text="Light" />
            <MenuItem mnemonicParsing="false" onAction="#applyDarkTheme" text="Dark" />
          </Menu>
        </MenuBar>

        <VBox fx:id="personList" minWidth="334.0" prefHeight="250.0" prefWidth="580.0" styleClass="pane-with-border" VBox.vgrow="ALWAYS">
          <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
          </padding>
          <StackPane fx:id="personListPanelPlaceholder" prefHeight="90.0" prefWidth="318.0" VBox.vgrow="ALWAYS" />
        </VBox>
           <StackPane fx:id="resultDisplayPlaceholder" prefHeight="100.0" prefWidth="470.0" styleClass="pane-with-border">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
           <StackPane fx:id="commandBoxPlaceholder" prefHeight="40.0" prefWidth="269.0" styleClass="pane-with-border">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>
      </VBox>
    </Scene>
  </scene>
</fx:root>
